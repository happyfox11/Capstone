<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#80B542"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_back_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_withdrawal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_rect_button"
                android:backgroundTint="#3A531C"
                android:text="회원탈퇴"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_modifyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_rect_button"
                android:backgroundTint="#3A531C"
                android:text="수정"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_profile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="top"
            android:src="@drawable/profile"
            app:civ_border_color="#AAAAAA"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/iv_profile_camera"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:background="@drawable/icon_camera"
            android:elevation="4dp"
            android:padding="8dp"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#C3E49B"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="닉네임"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_userName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLength="7"
            android:maxLines="1"
            android:text="이름 표시 "
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#DBE6CE"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="아이디"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loginFlag"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            app:srcCompat="@drawable/google_login" />

        <EditText
            android:id="@+id/tv_userIdInfo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLines="1"
            android:text="아이디 표시 "
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#C3E49B"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="성별"
            android:textSize="14dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_modify_gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_modify_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="남"
                android:text="남" />

            <RadioButton
                android:id="@+id/rb_modify_woman"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="여"
                android:text="여" />
        </RadioGroup>

    </LinearLayout>

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#DBE6CE"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="나이"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLength="3"
            android:maxLines="1"
            android:text="나이 표시"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#C3E49B"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="키"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_height"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLength="3"
            android:maxLines="1"
            android:text="키표시"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#DBE6CE"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="몸무게"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_kg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLength="3"
            android:maxLines="1"
            android:text="몸무게 표시"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:id="@+id/view15"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#C3E49B"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="목표칼로리"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_bmi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3.5"
            android:fontFamily="@font/cafe24ssurroundair"
            android:maxLength="6"
            android:maxLines="1"
            android:text="BMI 표시"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_bmi_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/round_rect_button"
            android:backgroundTint="#3A531C"
            android:text="자동"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/view18"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" />

    </LinearLayout>

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#DBE6CE"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/cafe24ssurround"
            android:gravity="center"
            android:text="활동량"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_modify_activity_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_modify_lv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:contentDescription="activity_lv1"
                    android:text="30분 이하" />

                <RadioButton
                    android:id="@+id/rb_modify_lv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:contentDescription="activity_lv2"
                    android:text="30분 - 1시간" />

                <RadioButton
                    android:id="@+id/rb_modify_lv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:contentDescription="activity_lv"
                    android:text="1시간 - 2시간" />

                <RadioButton
                    android:id="@+id/rb_modify_lv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="activity_lv"
                    android:text="2시간 이상" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B0B0" />
</LinearLayout>

